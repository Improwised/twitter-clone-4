extends ./layouts/main.pug

block content
  .container
    include header.pug
      .row.profile
        .col-sm-3
          .profile-sidebar
            .profile-userpic
              img.img-responsive(src='http://images.all-free-download.com/images/wallpapers_large/orange_flower_wallpaper_flowers_nature_wallpaper_1665.jpg', alt='')
              | &#x9;&#x9;&#x9;&#x9;&#x9;
            .profile-usertitle
              .profile-usertitle-name
                each user in username
                  span= user.username
                  | &#x9;&#x9;&#x9;&#x9;&#x9;

            .profile-usermenu
              ul.nav
                li.active
                  a(href='/home')
                    i.glyphicon.glyphicon-home
                    | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;Home
                | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                li
                  a(href='/profile')
                    i.glyphicon.glyphicon-user
                    | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;Profile
                | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                li
                  a(href='/twit')
                    i.glyphicon.glyphicon-pencil
                    | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;Tweet
                | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
        .col-sm-6
          .row
            each cell in twits
              .form-box
                .form-top
                  .form-top-left
                    h3
                      span= cell.username
                  .form-top-right
                      span= cell.time
                hr
                .form-bottom
                  span= cell.tweet_text
        .col-sm-3
          h4 May People You Know ???
            each cell in follows
              .profile-sidebar
                .profile-userpic
                  img.img-responsive(src='http://images.all-free-download.com/images/wallpapers_large/orange_flower_wallpaper_flowers_nature_wallpaper_1665.jpg', alt='')
                  | &#x9;&#x9;&#x9;&#x9;&#x9;
                .profile-usertitle
                  .profile-usertitle-name
                    span= cell.username
                  | &#x9;&#x9;&#x9;&#x9;&#x9;
                form(action='/follow' method='post')
                  .profile-userbuttons
                    input(type='hidden' name='follower' value = cell.id)
                    button.btn.btn-primary.btn-sm(type='submit') Follow


